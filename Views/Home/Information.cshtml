@{
	ViewBag.Title = "EoT - Information";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/Scripts/app/information.js")

<section class="services">
	<div class="container">
		<div class="row carousel-container">
			<div class="col-lg-8 col-md-8 mt-2">
				<div class="icon-box" data-aos="zoom-in-center" data-aos-delay="300">

					<div id="divNewUser">
						<div class="col-8 ml-3 headerNewUser">
							<h4>Health monitoring</h4>
						</div>
						<div class="col-12">
							<ul>
								<li style="text-align: left;">Measure your basic health data - diabetes risk, BMI and blood pressure</li>
								<li style="text-align: left;">Screen for diabetes with a step-bystep guide using glucouse test strips</li>
								<li style="text-align: left;">Screen for diabetes retinopathy and other common eye conditions</li>
								<li style="text-align: left;">Understand your daily health habits with a simple questionnaire</li>
								<li style="text-align: left;">Make an appointment with doctor to consult about your health</li>
							</ul>
						</div>

						<div class="row d-flex justify-content-center text-center">
							<div class="col-12">
								<h4>Let's get you registered with your own health booklet!</h4>
							</div>
							<div class="col-12">
								<div class="btn-group-vertical ml-4 mt-3" role="group">
									<div class="btn-group">
										<input class="text-center form-control-lg mb-2" id="txtFullName" placeholder="Enter full name here">
									</div>
								</div>
							</div>

							<div class="col-12">
								<div class="btn-group-vertical ml-4 mt-3" role="group">
									<div class="btn-group">
										<div class="col-md-12 text-muted" style="text-align:center"><h6>- Required -</h6></div>
									</div>
								</div>
							</div>
							<div class="form-check">
								<input class="form-check-input mt-2" type="checkbox" value="" id="chkTermsAndConditions" checked>
								<label class="form-check-label" for="chkTermsAndConditions1">
									<a href="#" class="text-muted text-wrap">I have read and consent to the Terms of Use</a>
								</label>
							</div>
							<div class="form-check" style="width: 82%">
								<input class="form-check-input mt-2" type="checkbox" value="" id="chkTermsAndConditions1" checked>
								<label class="form-check-label" for="chkTermsAndConditions1">
									<a href="#" class="text-muted text-wrap">
										We take your data privacy and security seriously and in accordance with the
										best parcties. I have read and consent to Data Policy
									</a>
								</label>
							</div>



							<div class="col-12">
								<div class="btn-group-vertical ml-4 mt-3" role="group">
									<div class="btn-group">
										<div class="col-md-12 text-muted text-wrap" style="text-align:center"><h6>- Optional -</h6></div>
									</div>
								</div>
							</div>
							<div class="form-check">
								<input class="form-check-input mt-2" type="checkbox" value="" id="chkTermsAndConditions2">
								<label class="form-check-label text-muted text-wrap" for="chkTermsAndConditions2">
									I agree to receive new updates and marketing information from EOT
								</label>
							</div>
							<div class="form-check" style="width: 82%">
								<input class="form-check-input mt-2" type="checkbox" value="" id="chkTermsAndConditions3">
								<label class="form-check-label text-muted" for="chkTermsAndConditions3">
									I allow my anonymised data to be used for health research purpose by EOT
								</label>
							</div>
						</div>

						<div class="row d-flex justify-content-center text-center mt-3">
							<div class="col-md-5 col-md-offset-5">
								<button type="button" class="w-90 btn btn-outline-primary m-2" id="btnLetsStart">Let's Start</button>
							</div>
						</div>

					</div>

					<div id="divExistingUser">
						<div class="col-12 ml-2 headerexistingUser">
							<h4>Custom monitoring</h4>
						</div>
						<div class="col-12">
							<ul>
								<li style="text-align: left;">Monitor glucouse levels, hypertension or other services</li>
								<li style="text-align: left;">Make an appointment with doctor to consult about your health</li>
							</ul>
						</div>
						<div class="col-12">
							<button type="button" class="btn btn-success" style="float:right !important" onclick="location.href= '@Url.Action("Payment", "Payment")';return false;">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="form-infomation">
	<div class="row d-flex">
	</div>
</div>


@{
	ViewBag.Title = "EoT - Identity Confirmation";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/Scripts/app/phonenumber.js")


<section class="services">
	<div class="container">
		<div class="row carousel-container">
			<div id="divValidate">
				<div class="icon-box" data-aos="zoom-in-center" data-aos-delay="300" style="text-align: left !important">
					<h4 class="animate__animated animate">Hi, how may I help you today?</h4>
					<h7 class="animate__animated animate" id="lblSubHeaderValidate">Key in mobile number to login or get started!</h7>

					<div class="col-lg-8 col-md-8" id="divPhoneNumber">
						<div class="btn-group-vertical mt-3" role="group">
							<div class="btn-group">
								<input class="text-center form-control-lg mb-2" maxlength="12" id="txtPhoneNumber">
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">1</button>
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">2</button>
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">3</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">4</button>
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">5</button>
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">6</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">7</button>
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">8</button>
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad">9</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-outline-secondary py-3 m-2 numpad" style="border: none !important;pointer-events:none;"></button>
								<button type="button" class="btn btn-outline-secondary py-3 m-2 ml-4 numpad">0</button>
								<button type="button" class="btn btn-get-started py-3 m-2 ml-3" id="btnValidatePhoneNumber">Go</button>
							</div>
						</div>
					</div>

					<div id="divPhoneNumberOtpValidate">
						<div class="btn-group-vertical mt-3 mr-2" role="group">
							<div class="col-lg-8 col-md-8">
								<input class="text-center form-control-lg mb-2" maxlength="6" id="txtPhoneNumberOtp">
							</div>
							<button type="button" class="btn btn-get-started py-3 m-2" id="btnValidateOtp">Go</button>
							@*Need to remove Just for demo*@
							<button type="button" class="btn btn-get-started py-3 m-2" id="btnNewUser">New User</button>
							<button type="button" class="btn btn-get-started py-3 m-2" id="btnExistingUser">Existing User</button>

						</div>
					</div>


				</div>
			</div>
		</div>
	</div>
</section>

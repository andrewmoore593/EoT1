@{
	ViewBag.Title = "EoT - Screening";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/Scripts/app/screening.js")


<section class="services">
	<div class="container">
		<div class="row carousel-container">
			<div class="col-lg-8 col-md-8 mt-2">
				<div class="icon-box" data-aos="zoom-in-center" data-aos-delay="300">
					<div id="divOpeningWelcomeScreen" class="row d-flex justify-content-center text-center welcome-screening">
						<div class="col-12 mt-3">
							<h4 class="text-muted">Welcome to EoT booth!</h4>
						</div>
						<div class="col-12 mt-5">
							<h4 class="text-muted">Door is open</h4>
						</div>
						<div class="col-12">
							<h4 class="text-muted">Please step into the booth.</h4>

						</div>
						<div class="col-12">
							<i class="fas fa-arrow-circle-right" style="font-size: 35px; float: right; cursor: pointer" id="btnWelcomeNext"></i>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen1" class="row d-flex justify-content-center text-center welcome-screening">
						<div class="col-12 mt-3">
							<h4 class="text-muted">Please take a seat</h4>
						</div>
						<div class="col-12 mt-3">
							<h4 class="text-muted" style="color: #909DB1 !important; font-size:10px">User detected...</h4>
						</div>
						<div class="col-12 mt-3">
							<button type="button" class="btn btn-success w-100" id="btnUserReady">I'm Ready</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen2" class="row d-flex justify-content-center text-center welcome-screening2">
						<div class="col-12 mt-3">
							<h4 class="text-muted">Hi, UserFirstname!</h4>
						</div>
						<div class="col-12 mt-3">
							<h4 class="text-muted">Please confirm the services for your appointment:</h4>
						</div>
						<div class="col-2 mt-3 input-group">
							<label class="text-muted" style="color: #909DB1 !important; font-size:10px;">BP</label>&nbsp;&nbsp;
							<label class="text-muted" style="color: #909DB1 !important; font-size:10px">Glucose</label>
						</div>
						<div class="col-12 mt-3">
							<button type="button" class="btn btn-success w-100" id="btnServicesConfrimation">Yes</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen3" class="row d-flex welcome-screening2">
						<div class="col-12 mt-3 input-group">
							<div class="col-6">
								<h4 class="text-muted">We will now measure your height and weight.</h4>
								<h4 class="text-muted mt-5">Please step on the feet markings in front of you.</h4>
								<i class="fas fa-shoe-prints mt-5 ml-4" style="font-size: 100px; transform: rotate(-90deg); color:#FFE699;"></i>
							</div>
							<div class="col-md-offset-6 ml-3" style="background-color: #E7E6E6; width:47%">
								<label class="text-wrap m-5" style="vertical-align:central !important">Video demonstration of user position</label>
							</div>
						</div>
						<div class="col-12 mt-5">
							<button type="button" class="btn btn-success" id="btnMeasurementsNext" style="float:right !important">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen4" class="row d-flex welcome-screening2">
						<div class="col-12 mt-3 input-group">
							<div class="col-6">
								<h4 class="text-muted">Please stay still while we measure your body composition.</h4>
								<label class="mt-5" style="color: #899CB4">Measurements in progress...</label>
								<label class="mt-3" style="color: #899CB4">Done! Click 'Next'</label>
							</div>
							<div class="col-md-offset-6 ml-3" style="background-color: #E7E6E6; width:47%">
								<label class="text-wrap m-5" style="vertical-align:central !important">Video demonstration of user position</label>
							</div>
						</div>
						<div class="col-12 mt-5">
							<button type="button" class="btn btn-success" id="btnMeasurementsNext1" style="float:right !important">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen5" class="row d-flex welcome-screening2">
						<div class="col-12 mt-3 input-group">
							<div class="col-6">
								<h4 class="text-muted" style="text-align: left">Glucose:</h4>
								<h4 class="text-muted">Step 1</h4>
								<label class="text-wrap">Swab your right index finger with the alcohol swab provided.</label>
								<h4 class="text-muted mt-3">Step 2</h4>
								<label class="text-wrap">
									With your left hand, place the safety lancet over the cleaned finger and press the button
									Discard lancet into sharps bin.
								</label>
								<h4 class="text-muted mt-3">Step 3</h4>
								<label class="text-wrap">
									Take the glucouse test strip and apply indicated end on the blood droplet.
								</label>
								<h4 class="text-muted mt-3">Step 4</h4>
								<label class="text-wrap">
									Insert the test strip into the gulcose meter.
								</label>
							</div>
							<div class="col-md-offset-6 ml-3" style="background-color: #E7E6E6; width:47%">
								<label class="text-wrap m-5" style="vertical-align:central !important">Video demonstration of glucometer usage</label>
							</div>
						</div>
						<div class="col-12 mt-5">
							<button type="button" class="btn btn-success" id="btnGlucose1Next" style="float:right !important">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen6" class="row d-flex welcome-screening2">
						<div class="col-12 mt-3 input-group">
							<div class="col-6">
								<h4 class="text-muted" style="text-align: left">Glucose:</h4>
								<h4 class="text-muted">Step 5</h4>
								<label class="text-wrap">Remove glucose strip and discard into safety bin.</label>
								<h4 class="text-muted mt-3">Step 6</h4>
								<label class="text-wrap">
									Apply a plaster over pricked area.
								</label>
							</div>
							<div class="col-md-offset-6 ml-3" style="background-color: #E7E6E6; width:47%">
								<label class="text-wrap m-5" style="vertical-align:central !important">Video demonstration of glucometer usage</label>
							</div>
						</div>
						<div class="col-12 mt-5">
							<button type="button" class="btn btn-success" id="btnGlucose2Next" style="float:right !important">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen7" class="row d-flex justify-content-center text-center welcome-screening2">
						<div class="col-12 mt-3">
							<h4 class="text-muted">Glucose reading taken!</h4>
						</div>
						<div class="col-12 mt-3">
							<h4 class="text-muted">Now, I will guid you through the steps to use the eye camera device in front of you.</h4>
							<i class="fa fa-eye" style="font-size: 60px"></i>
						</div>
						<div class="col-12 mt-3">
							<button type="button" class="btn btn-success" id="btnGlucoseCompleteNext">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen8" class="row d-flex welcome-screening2">
						<div class="col-12 mt-3 input-group">
							<div class="col-6">
								<h4 class="text-muted" style="text-align: left">Eye Screening:</h4>
								<h4 class="text-muted">Step 1</h4>
								<label class="text-wrap">Place your chin on the chin rest</label>
								<h4 class="text-muted mt-3">Step 2</h4>
								<label class="text-wrap">
									Tap on the user screen of the eye camera. Wait for the device to get ready.
								</label>
								<h4 class="text-muted mt-3">Step 3</h4>
								<label class="text-wrap">
									Countdown 30 seconds.&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								</label>
								<i class="far fa-clock" style="font-size: 50px"></i><label class="text-wrap" style="font-size:10px">Countdown timer</label>
							</div>
							<div class="col-md-offset-6 ml-3" style="background-color: #E7E6E6; width:47%">
								<label class="text-wrap m-5" style="vertical-align:central !important">Video demonstration of user position</label>
							</div>
						</div>
						<div class="col-12 mt-5">
							<button type="button" class="btn btn-success" id="btnEyeNext" style="float:right !important">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen9" class="row d-flex justify-content-center text-center welcome-screening2">
						<div class="col-12 mt-3">
							<h4 class="text-muted">Eyes images taken!</h4>
						</div>
						<div class="col-12 mt-3">
							<h4 class="text-muted">We will now measure your blood pressure.</h4>
						</div>
						<div class="col-12 mt-3">
							<button type="button" class="btn btn-success" id="btnEyesCompleteNext">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen10" class="row d-flex welcome-screening2">
						<div class="col-12 mt-3 input-group">
							<div class="col-6">
								<h4 class="text-muted" style="text-align: left">Blood Pressure:</h4>
								<h4 class="text-muted">Step 1</h4>
								<label class="text-wrap">Insert the blood pressure meter to your left arm and press start on the device screen.</label>
								<h4 class="text-muted mt-3">Step 2</h4>
								<label class="text-wrap">
									Stay still until measurement is complete.
								</label>
								<label class="mt-3" style="color: #899CB4">Measurements in progress...</label>
								<label class="mt-3" style="color: #899CB4">Done! Click 'Next'</label>
							</div>
							<div class="col-md-offset-6 ml-3" style="background-color: #E7E6E6; width:47%">
								<label class="text-wrap m-5" style="vertical-align:central !important">Video demonstration of user position</label>
							</div>
						</div>
						<div class="col-12 mt-5">
							<button type="button" class="btn btn-success" id="btnBloodPressureNext" style="float:right !important">
								Next
								<i class="fas fa-arrow-circle-right"></i>
							</button>
						</div>
					</div>

					<div id="divOpeningWelcomeScreen11" class="row d-flex justify-content-center text-center welcome-screening2">
						<div class="col-12 mt-3">
							<h4 class="text-muted">You have completed your health monitoring package!</h4>
						</div>
						<div class="col-12 mt-3">
							<button type="button" class="btn btn-success w-50" id="btnFinish">
								View my results
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="form-screening">
	<div class="row">
		
	</div>
</div>